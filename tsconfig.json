{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "jsx": "react",
    "module": "esnext",
    "lib": [
      "dom", "es5", "es2015", "es6", "es7", "esnext"
    ],
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "locale": "en",
    "declaration": true,
    "noImplicitThis": false,
    "declarationDir": "dist/types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/components/ui/*",
    "src/components/router/*",
    "src/plugins/*"
  ]
}