{
  "name": "@onetale/core",
  "version": "0.2.3",
  "description": "Develop Adventure Game (or ADV, Visual Novel, Galgame, etc.) on your own!",
  "keywords": [
    "Game Engine",
    "AVG",
    "Visual Novel",
    "Galgame",
    "Game"
  ],
  "main": "dist/avg.umd.js",
  "module": "dist/avg.es5.js",
  "browser": "dist/avg.min.js",
  "typings": "dist/types/avg.d.ts",
  "files": [
    "dist"
  ],
  "author": "Icemic Jia <bingfeng.web@gmail.com>",
  "homepage": "https://avgjs.org/",
  "scripts": {
    "build": "NODE_ENV=production rollup -c rollup.config.ts && gulp",
    "start": "NODE_ENV=development rollup -c rollup.config.ts -w",
    "prebuild": "rimraf dist",
    "prepack": "npm run build",
    "test": "mocha --compilers js:babel-core/register",
    "lint": "tslint -t stylish 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "lint-fix": "tslint -t stylish 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}' --fix",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged"
  },
  "license": "Apache-2.0",
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "dependencies": {
    "color": "^3.0.0",
    "deep-equal": "^1.0.1",
    "eventemitter3": "^3.1.0",
    "ismobilejs": "^0.4.0",
    "mobx": "^5.1.0",
    "mobx-react": "^5.2.5",
    "mobx-state-tree": "^3.2.3",
    "prop-types": "^15.5.8",
    "raw-loader": "^0.5.1",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/color": "^3.0.0",
    "@types/deep-equal": "^1.0.1",
    "@types/node": "^8.5.2",
    "@types/pixi.js": "4.6.x",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^15.6.20",
    "@types/react-dom": "^15.5.8",
    "chai": "^3.5.0",
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "git-cz": "^1.7.1",
    "gulp": "^3.9.1",
    "gulp-rename": "^1.4.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-uglify": "^3.0.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-license": "^0.7.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.18.0",
    "semantic-release": "^15.12.1",
    "sinon": "^1.17.5",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.16.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^2.9.2",
    "validate-commit-msg": "^2.14.0"
  }
}
