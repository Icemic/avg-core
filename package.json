{
  "name": "@onetale/core",
  "version": "0.1.1",
  "description": "Develop Adventure Game (or ADV, Visual Novel, Galgame, etc.) on your own!",
  "keywords": [
    "Game Engine",
    "AVG",
    "Visual Novel",
    "Galgame",
    "Game"
  ],
  "main": "dist/avg.js",
  "typings": "dist/src/avg.d.ts",
  "files": [
    "dist"
  ],
  "author": "Icemic Jia <bingfeng.web@gmail.com>",
  "homepage": "https://avgjs.org/",
  "scripts": {
    "dev": "NODE_ENV=development webpack --env.development --watch --progress --colors",
    "dist": "NODE_ENV=production webpack --env.release --progress --colors && webpack --env.release --env.minimize --progress --colors",
    "prepack": "npm run dist",
    "test": "mocha --compilers js:babel-core/register",
    "lint": "tslint -t stylish 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "lint-fix": "tslint -t stylish 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}' --fix",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged"
  },
  "license": "Apache-2.0",
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "dependencies": {
    "color": "^3.0.0",
    "deep-equal": "^1.0.1",
    "eventemitter3": "^2.0.3",
    "ismobilejs": "^0.4.0",
    "koa-compose": "^3.2.1",
    "mobx": "^5.1.0",
    "mobx-react": "^5.2.5",
    "mobx-state-tree": "^3.2.3",
    "pixi.js": "4.6.x",
    "prop-types": "^15.5.8",
    "raw-loader": "^0.5.1",
    "react": "^15.6.1",
    "react-dom": "^15.4.1",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/color": "^3.0.0",
    "@types/deep-equal": "^1.0.1",
    "@types/koa-compose": "^3.2.2",
    "@types/lodash": "^4.14.104",
    "@types/node": "^8.5.2",
    "@types/pixi.js": "4.6.x",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^15.6.10",
    "@types/react-dom": "^15.5.7",
    "babel-core": "^6.26.3",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-export-extensions": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^3.5.0",
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "git-cz": "^1.7.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "react-dev-utils": "^4.2.1",
    "semantic-release": "^15.12.1",
    "sinon": "^1.17.5",
    "ts-loader": "^3.2.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.16.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-loader": "^3.6.0",
    "tslint-webpack-plugin": "^1.2.0",
    "typescript": "^2.9.2",
    "validate-commit-msg": "^2.14.0",
    "webpack": "^3.6.0"
  }
}
