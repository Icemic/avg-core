{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "preserve",
    "module": "esnext",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}