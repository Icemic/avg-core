{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "preserve",
    "module": "esnext",
    "lib": [
      "dom", "es5", "es2015", "es6", "es7", "esnext"
    ],
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "locale": "en"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}